@page
@inject IHtmlLocalizer<DigitalWalletResource> L
@using Avid.PaymentService.DigitalWallet.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Avid.PaymentService.DigitalWallet.Web.Pages.PaymentService.DigitalWallet.Accounts.Account.ChangeLockedBalanceModalModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="ChangeLockedBalanceInput" data-ajaxForm="true" asp-page="ChangeLockedBalanceModal">
    <abp-modal>
        <abp-modal-header title="@L["ChangeAccountLockedBalance"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id"/>
            <abp-input asp-for="Account.Balance" disabled/>
            <abp-input asp-for="Account.LockedBalance" disabled/>
            <abp-form-content/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>